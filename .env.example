# Server Configuration
PORT=4316
HOST=0.0.0.0

# HTTPS Configuration
# Set to 'true' to enable HTTPS, 'false' for HTTP only
ENABLE_HTTPS=true

# SSL Certificate Paths (only used when ENABLE_HTTPS=true)
# Paths can be relative to project root or absolute
SSL_KEY_PATH=./certs/cf-origin-key.pem
SSL_CERT_PATH=./certs/cf-origin-cert.pem

# API Configuration
# OpenAI-compatible API provider (DeepInfra, OpenAI, Groq, etc.)
API_KEY=your_api_key_here
API_URL=https://api.deepinfra.com/v1/openai/chat/completions
MODEL_ID=deepseek-ai/DeepSeek-R1-0528

# Examples for different providers:
# OpenAI: API_URL=https://api.openai.com/v1/chat/completions, MODEL_ID=gpt-4
# Groq: API_URL=https://api.groq.com/openai/v1/chat/completions, MODEL_ID=llama-3.1-70b-versatile
# DeepInfra: API_URL=https://api.deepinfra.com/v1/openai/chat/completions, MODEL_ID=deepseek-ai/DeepSeek-R1-0528



# Frontend Configuration
# API URLs that the frontend will use
# Production API URL (used when frontend is served over HTTPS)
FRONTEND_API_URL=https://your-production-domain.com
# Development API URL (used when frontend is served over HTTP)
FRONTEND_DEV_API_URL=https://localhost:3000